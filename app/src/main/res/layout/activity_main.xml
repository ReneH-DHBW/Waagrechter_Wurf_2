<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/zur_hilfe_seite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weite_wird_berechnet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="20dp"
        android:text="@string/Button_Hilfe" />

    <EditText
        android:id="@+id/eingegebene_höhe"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:autofillHints="0"
        android:hint="@string/EditText_hohe_eingeben"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/eingegebene_beschleunigung"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eingegebene_höhe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:autofillHints="0"
        android:hint="@string/EdiText_eingegebene_Beschleunigung"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/weite_wird_berechnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eingegebene_beschleunigung"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/Button_weite_wird_berechnet" />

    <Button
        android:id="@+id/hilfe_button_v"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eingegebene_höhe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="@string/Button_Hilfe_V" />

    <Button
        android:id="@+id/hilfe_button_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:text="@string/Button_Hilfe_H" />

</RelativeLayout>