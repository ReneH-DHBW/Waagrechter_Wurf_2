<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2_Anzeige"
    android:background="@drawable/clipart_bilder_rechts">

    <Button
        android:id="@+id/zur_hilfe_seite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="614dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/awesome_toast_hilfe_button"
        android:text="@string/Button_Hilfe"
        android:textColor="@color/colorBlack"  />

    <Button
        android:id="@+id/speichern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/awesome_toast_hilfe_button"
        android:text="Speichern"
        android:textColor="@color/colorBlack"  />
    <Button
        android:id="@+id/weiter_zur_Tabelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/awesome_toast_hilfe_button"
        android:text="Zur Tabelle"
        android:textColor="@color/colorBlack"  />

    <TextView
        android:id="@+id/hoehe_anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:background="#00BCD4"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/v_anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hoehe_anzeigen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:background="#00BCD4"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ergebnis_anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_anzeigen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:background="#00BCD4"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/eingegebene_hoehe_test"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:autofillHints="0"
        android:ems="10"
        android:hint="@string/EditText_hohe_eingeben"
        android:textAlignment="center"
        android:inputType="text" />

</RelativeLayout>